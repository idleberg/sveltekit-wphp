{
  "name": "@idleberg/sveltekit-wphp",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "node tools/bootstrap.mjs",
    "build": "vite build",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev",
    "package": "vite package",
    "postinstall": "npm run bootstrap",
    "prepare": "husky install",
    "preview": "vite preview",
    "start": "vite dev"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "degit": "^2.8.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "shelljs": "^0.8.5",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.4",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3",
    "vite": "^3.0.0"
  },
  "lint-staged": {
    "*.svelte": "prettier --write",
    "*.(ts|js)": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.(css|scss)": [
      "stylelint --cache --fix",
      "prettier --write"
    ]
  }
}
